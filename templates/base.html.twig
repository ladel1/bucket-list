                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                      <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{path("main")}}">Accueil</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{path("app_about_us")}}">About US</a>
                      </li>                                           
                      {% block item_menu %} {% endblock %}
                      <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Wish
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                          <li><a class="dropdown-item" href="{{path("app_wish_list")}}">Liste</a></li>
                          {% if app.user %}
                            <li><a class="dropdown-item" href="{{path("app_wish_add")}}">Ajouter</a></li>
                          {% endif %}
                        </ul>
                      </li>
                      {% if app.user %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{path("app_logout")}}">Logout</a>
                        </li>
                      {% else %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{path("app_register")}}">Register</a>
                        </li> 
                        <li class="nav-item">
                          <a class="nav-link" href="{{path("app_login")}}">Login</a>
                        </li>                                             
                      {% endif %}
                    </ul>
                    {% if app.user %}
                      <span class="navbar-text">
                        Hello <b>{{app.user.username}}</b>
                      </span>
                    {% endif %}
                  </div>
                </div>
              </nav>

